<div class="row">
  <div class="col">
    <img src="https://burger-database-sequelize.herokuapp.com/assets/images/burger.png" alt="burger" id="id">
  </div>
</div>

<h1>Eat-Da-Burger!</h1>

<div class="row">
  <div class="col-6 burgers">
    <h2><u>Eat It List</u></h2>
    {{#each burgers}}
    {{#unless devoured}}
    <ol class="uneaten">{{burger_name}}<button data-id="{{id}}" class="update-button btn btn-sm btn-warning">Stuff It
      </button><button data-id="{{id}}" class="delete-button btn btn-sm btn-warning">Delete</button></ol>
    {{/unless}}
    {{/each}}
  </div>

  <div class="col-6 burgers">
    <h2><u>Devour It List</u></h2>
    {{#each burgers}}
    {{#if devoured}}
    <ol class="eaten">{{burger_name}}<button data-id="{{id}}"
        class="delete-button btn btn-sm btn-warning">Delete</button></ol>
    {{/if}}
    {{/each}}
  </div>
</div>

<div class="row">
  <div class="col form-container">
    <div class="form-box">
      <h2>Add Your Burger:</h2>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="burger" name="name">
          <button class="btn btn-lg btn-success border-white" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>